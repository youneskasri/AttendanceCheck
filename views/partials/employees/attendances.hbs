<h1 class="mt-4">Last 30 attendances</h1>
<form action="/employees/{{ employee._id }}/report">
    <button class="btn btn-warning float-right">
      <i class="fas fa-images"></i>  
      Attendances Report</button>
</form>
  <table class="table table-sm  text-center table-striped mt-4">
        <thead class="table-dark">
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        {{#each employee.attendances}}
              <tr class="attendance">               
                <td>{{dateFormat date "DD/MM/YYYY"}}</td>
                <td>{{dateFormat date "HH:mm:ss"}}</td>
                <td>
                  <button class="showAttendance btn-sm btn-warning">
                    <i class="fas fa-eye">
                    <span class="d-none date">{{dateFormat date "DD/MM/YYYY Ã  HH:mm"}}</span>
                    <span class="d-none url">/attendances/{{ _id }}</span>
                    </i>
                  </button>
                </td>
              <tr>
        {{/each}}
        </tbody>
      </table>        
  
	

