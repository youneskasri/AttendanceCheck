<!DOCTYPE html>
<html>

  <head>
    <title>Show Employee</title>
    {{> links}}
  </head>

  <body class="p-0 bg-light text-dark">
    {{> navbar}}
  
     <!-- Content -->
     <div class="container-fluid mt-4">
        <div class="row">
          <div class="col-6">
              <div class="container-fluid">
                {{> employees/info}}
                {{> employees/stats}}
              </div>
          </div>

          <div class="col-6">
              <div class="container-fluid">
                {{> employees/card}}
                {{> employees/attendances}}
              </div>
          </div>
      </div> 

    {{> scripts}}

    <script>
      /* Enable Tooltips */
      $(document).ready(function(){
          $('[data-toggle="tooltip"]').tooltip();
      });
    </script>

  </body>
</html>