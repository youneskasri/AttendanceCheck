<div class="container-fluid">
	
	<h1 data-i18n="LAST_ATTENDANCE">Last attendance</h1>
	<div>
	<hr>
		
		
	<div class="row">
		<div class="col-6">
			<h5><span data-i18n="DATE">Date</span> <span class="text-secondary" id="lastAttendanceDate"></span></h5>
			
			<img id="lastAttendanceImage" class="img-fluid" src=""/>
		</div>
		<div class="col-6" id="employeeCard">
		  <span id="qrCode"></span>
		  <div class="card-body pt-1">
		  	<div><span class="font-weight-bold" data-i18n="CIN">CIN</span> <span class="">{{employee.CIN}}</span></div>
		    <div><span class="font-weight-bold" data-i18n="FIRSTNAME">First name</span> {{employee.firstName}}</div>
		    <div><span class="font-weight-bold" data-i18n="LASTNAME">Last name</span> {{employee.lastName}}</div>
				<div class="pt-2">
					<a href="/cards/search?q={{employee.firstName}} {{employee.lastName}} {{employee.CIN}}" class="btn btn-sm btn-warning">
						<i class="fas  fa-print"></i> 
						<span data-i18n="PRINT_CARD">Print Card</span>
						</a>
				</div>
		  </div>
		</div>
	</div>

</div>


<script type="text/javascript" src="/javascripts/qrcode-generator.js"></script>
<script>
	var typeNumber = 1;
	var errorCorrectionLevel = 'L';
	var qr = qrcode(typeNumber, errorCorrectionLevel);
	qr.addData("{{employee.CIN}}");
	qr.make();
	document.getElementById('qrCode').innerHTML = qr.createImgTag(4);
</script>

