<!DOCTYPE html>
<html>

  <head>
    <title>Users</title>
    {{> links}}
  </head>

  <body class="p-0 table-dark text-light">
    {{> loadingSpinner}}
    {{> userNavbar }}
    {{> errorHandlers}}
    
    <div class="container mt-4">
        <div class="float-right">
            <a href="/users/new" class="btn text-dark btn-warning"><i class="fa fa-plus"></i> <span data-i18n="ADD_USER">Add user</span></a>
        </div>
        <table class="table table-dark table-hover">
            <thead>
                <tr>                    
                    <th data-i18n="USERNAME">Username</th>
                    <th data-i18n="ROLE">RÃ´le</th>
                    <th data-i18n="CIN">CIN</th>
                    {{!-- <th data-i18n="PHONE">Tel</th> --}}
                    <th data-i18n="EMAIL">Email</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{ username }}</td>
                    <td>{{ role }}</td>
                    <td>{{ CIN }}</td>
                    <td>{{ email }}</td>
                </tr>
                {{/each}}               
            </tbody>
        </table>
    </div>
    {{> scripts}}
  </body>
</html>
